<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toStartOf="@+id/txtFirstName"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toStartOf="@+id/txtLastName"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="84dp"
        android:layout_height="28dp"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toStartOf="@+id/txtEmail"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="178dp" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="416dp"
        android:layout_height="45dp"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="346dp" />

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="109dp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="165dp" />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="English"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="10dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="372dp"
        android:layout_height="21dp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="9dp" />

    <CheckBox
        android:id="@+id/chkUgly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ugly"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="280dp" />

    <CheckBox
        android:id="@+id/chkBeautiful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beautiful"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="233dp" />

    <RadioButton
        android:id="@+id/rbGirl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girl"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="281dp" />

    <RadioButton
        android:id="@+id/rbBoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boy"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="228dp" />

</androidx.constraintlayout.widget.ConstraintLayout>