<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgrammingActivity">

    <RadioGroup
        android:layout_width="243dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="388dp" />

    <RadioButton
        android:id="@+id/rbCSharp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C#"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCSharp"
        app:layout_constraintTop_toTopOf="@+id/textViewCSharp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="260dp" />

    <RadioButton
        android:id="@+id/rbJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:textColor="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="@+id/textViewJava"
        app:layout_constraintTop_toTopOf="@id/textViewJava"
        tools:layout_editor_absoluteX="260dp" />

    <TextView
        android:id="@+id/textViewJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/java_programming"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/textViewCSharp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="152dp"
        android:text="C#"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="select language"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="200dp"
        android:shadowColor="@color/teal_700"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />
</androidx.constraintlayout.widget.ConstraintLayout>